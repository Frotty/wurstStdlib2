function UpgradeClass.toObjectString() returns string
	var result = ""
	switch this
		case NONE
			result = ""
		case Armor
			result = "armor"
		case Artillery
			result = "artillery"
		case Melee
			result = "melee"
		case Ranged
			result = "ranged"
		case Caster
			result = "caster"
	return result

