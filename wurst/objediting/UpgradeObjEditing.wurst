		case AttackSpillDistanceBonus
			result = "rasd"
		case AttackSpillRadiusBonus
			result = "rasr"
		case AttackTargetCountBonus
			result = "atc"
		case AuraDataBonus
			result = "raud"
		case DefenseTypeChange
