		case EnableAttacksRooted
			result = "rroo"
		case EnableAttacksUprooted
			result = "ruro"
		case GoldHarvestBonus
			result = "rmin"
		case GoldHarvestBonusEntangle
			result = "rent"
		case HitPointBonus
			result = "rhpx"
		case HitPointBonusPercent
			result = "rhpo"
		case HitPointRegeneration
			result = "rhpr"
		case LumberHarvestBonus
			result = "rlum"
		case MagicImmunity
			result = "rmim"
		case ManaPointBonus
			result = "rmnx"
